<Page x:Class="ClientApplication.canalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="680"
      Title="canalPage">

    <Grid>

        <Border CornerRadius="15">
            <Border.Background>
                <SolidColorBrush Color="White"/>
            </Border.Background>
            <StackPanel
                x:Name="mainPanel">
                
                <StackPanel 
                    x:Name="topStackPanel"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Height="40"
                    Margin="0,10,0,10">
                    
                    <StackPanel 
                        x:Name="leftTopButtonPanel">
                        
                        <Button
                            x:Name="leftTopButton"
                            Width="100"
                            Height="40"
                            HorizontalAlignment="Left"
                            Style="{StaticResource PagesButtonTheme}">
                            
                            <StackPanel 
                                Orientation="Horizontal"
                                VerticalAlignment="Center">

                                <iconPacks:PackIconMaterial 
                                    Kind="LessThan" 
                                    x:Name="leftTopButtonIcon"
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Foreground="Black"/>

                                <Label 
                                    x:Name="leftTopButtonLabel"
                                    Content="Wróć"
                                    FontSize="22"/>
                                
                            </StackPanel>
                            
                        </Button>
                        
                    </StackPanel>

                    <StackPanel 
                        x:Name="centerTopNamePanel"
                        Width="400"
                        Margin="0,0,100,0">

                        <Label
                            HorizontalAlignment="Center"
                            FontSize="22"
                            Name="centerTopNameLabel"
                            Margin="10,0,10,0"/>

                    </StackPanel>

                </StackPanel>

                <Border Margin="10,0,10,0" BorderThickness="1" BorderBrush="#f083da"/>

                <!---center-->
                <ScrollViewer
                    x:Name="centerPanelScroll"
                    Height="558"
                    Width="600"
                    HorizontalScrollBarVisibility="Hidden">
                    <StackPanel
                        x:Name="centerPanel"
                        Margin="0,10,0,10"
                        Orientation="Vertical"
                        HorizontalAlignment="Stretch">
                        <!--<TextBox x:Name="messagesBox" Height="552" TextWrapping="Wrap" Text=""/>-->

                    </StackPanel>

                </ScrollViewer>

                <Border Margin="10,0,10,0" BorderThickness="1" BorderBrush="#f083da"/>
                
                <!---bottom-->
                <StackPanel
                    x:Name="bottomPanel"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,5,0,10">

                    <StackPanel
                        x:Name="leftBottomPanel"
                        Width="540">

                        <TextBox
                            materialDesign:HintAssist.Hint="Wpisz wiadomość "
                            materialDesign:HintAssist.Foreground="Black"
                            BorderThickness="0"
                            Margin="0,5,0,5"
                            x:Name="messageBox"
                            Height="40"
                            TextWrapping="Wrap"
                            Width="500"
                            VerticalAlignment="Center"
                            FontSize="24">
                            
                        </TextBox>
                        
                    </StackPanel>

                    <StackPanel x:Name="rightBottomButtonPanel">

                        <Button
                            x:Name="sendButton"
                            Width="100"
                            Height="50"
                            HorizontalAlignment="Left"
                            Style="{StaticResource PagesButtonTheme}">

                            <StackPanel 
                                Orientation="Horizontal">

                                <iconPacks:PackIconMaterial 
                                    Kind="Send"
                                    Width="20"
                                    Height="18"
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Foreground="Black"/>

                            </StackPanel>

                        </Button>
                        
                    </StackPanel>

                </StackPanel>


            </StackPanel>
        </Border>

    </Grid>
</Page>
