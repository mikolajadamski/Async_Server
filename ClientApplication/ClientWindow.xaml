                    <LinearGradientBrush>
                        <GradientStop Color="#7be9f6" Offset="0.0"/>
                        <GradientStop Color="#f083da" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <Border CornerRadius="15" Grid.ColumnSpan="1" Grid.Column="1" Margin="0,10,10,10" Grid.Row="1">
                <Border.Background>
                    <SolidColorBrush Color="White"/>
                </Border.Background>
            </Border>

            <StackPanel VerticalAlignment="Top" Margin="0,20,0,0">
                <Image Source="Images/Logo.png" Width="120" Margin="75,0"/>
                <TextBlock Text="Hablar"
                       FontWeight="Light"
                       FontFamily="helvetica"
                       FontSize="40"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            </StackPanel>


