                    <Border>
                        <StackPanel>
                            <Button Click="createNewCanal_Click"
                        Width="100" Height="40" 
                        Margin="0,0,0,0" 
                        Name="CreateNewCanal" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial 
                            Kind="Plus"
